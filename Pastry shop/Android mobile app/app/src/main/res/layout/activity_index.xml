<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="#B7B7B7"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="67dp"
            app:srcCompat="@drawable/header"></ImageView>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#515151" android:textAlignment="center" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Obavestenja "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="obavestenja"
                    ></TextView>
                <TextView android:text="Pocetna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="index"

                    ></TextView>
                <TextView android:text="Torte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="torte"

                    ></TextView>
                <TextView android:text="Kolaci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="kolaci"

                    ></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Promocija "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="promocija"

                    ></TextView>
                <TextView android:text="Korpa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="korpa"

                    ></TextView>
                <TextView android:text="Profil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="profil"

                    ></TextView>
                <TextView android:text="Odjava"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:onClick="odjava"

                    ></TextView>
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30px"
            app:srcCompat="@drawable/slika1"></ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30px"
            app:srcCompat="@drawable/slika2"></ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30px"
            app:srcCompat="@drawable/slika3"></ImageView>
        <TextView
            android:background="#515151"
            android:textColor="@color/white"
            android:padding="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Dobrodošli u čarobni svet ukusa i slasti - Prodavnica Slatki Zalogaj! Naša poslastičarnica pruža vrhunski doživljaj za ljubitelje torti i kolača. Slatki Zalogaj se ponosi bogatom ponudom ručno izrađenih torti, pažljivo birajući najkvalitetnije sastojke za savršen ukus. Nezavisno od vaših preferencija - bilo da volite klasične čokoladne torte, voćne torte s svežim voćem ili sofisticirane kreativne kreacije, u našoj prodavnici ćete pronaći nešto posebno. Pored torti, u Slatkom Zalogaju možete uživati u raznolikim kolačima - od tradicionalnih poslastica do modernih inovacija. Posetite nas i dozvolite nam da vas odvedemo na put slatkih zadovoljstava. U Prodavnici Slatki Zalogaj ne samo da prodajemo torte i kolače, već stvaramo nezaboravne trenutke slasti koje ćete deliti sa svojim najdražima."
            />
        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="#515151"
            android:textColor="@color/white"
            android:padding="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Kontakt telefon - 0657896547

\nRadno vreme\nRadni dan 08-20h\nSubota 11-19h\nNedelja slobodan dan

\nInstagram
\nFacebook"
            />



        <ImageView
            android:id="@+id/imageViewPromocija1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textViewPromocija1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="" />
        <ImageView
            android:id="@+id/imageViewPromocija2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textViewPromocija2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="" />


        <ImageView
            android:id="@+id/imageViewPromocija3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textViewPromocija3"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="" />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#515151" android:textAlignment="center" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Kotakt telefon - 0657896547"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    ></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Radno vreme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"

                    android:gravity="center"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Radni dan 08-20h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Subota 11-19h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:gravity="center"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Nedelja slobodan dan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:gravity="center"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:text="Insagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:textColor="@color/white"
                    android:gravity="center"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <TextView android:text="Facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:textColor="@color/white"
                    android:gravity="center"></TextView>
            </TableRow>

        </TableLayout>
    </LinearLayout>

</ScrollView>